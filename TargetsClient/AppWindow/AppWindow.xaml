<Window x:Class="TargetsClient.AppWindow.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TargetsClient.AppWindow"
                xmlns:loc="clr-namespace:TargetsClient"
        mc:Ignorable="d"
        Title="AppWindow" x:Name="window" Height="300" Width="300">
    <Window.DataContext >
        <local:AppWindowViewModel x:Name="context2"/>
    </Window.DataContext>

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="User email"></TextBlock>
            <TreeView ItemsSource="{Binding User.Projects}" Height="200">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type loc:Project}" ItemsSource="{Binding Steps}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Title}" />
                            <TextBlock Text="{Binding Description}"></TextBlock>
                            <CheckBox IsChecked="{Binding State}"></CheckBox>
                            <Button >Done!</Button>
                            <Button >Add new step</Button>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type loc:Step}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Title}" />
                            <TextBlock Text="{Binding Description}"></TextBlock>
                            <CheckBox IsChecked="{Binding State}"></CheckBox>
                            <Button >Done!</Button>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
            <Button Content="New project" ></Button>
            <Button Content="Delete project" ></Button>
            <Button Content="Logout" Command="{Binding LogoutCmd}" CommandParameter="{Binding ElementName=window}"></Button>
        </StackPanel>
    </Grid>
</Window>
