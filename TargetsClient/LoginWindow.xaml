<Window x:Class="TargetsClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TargetsClient"
        mc:Ignorable="d"
        Title="Targets" Height="350" Width="525">
    <Window.DataContext >
            <local:LoginWindowViewModel x:Name="context2"/>
        </Window.DataContext>

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Text="{Binding Login}" HorizontalAlignment="Center" Width="100"></TextBox>
            <TextBox Text="{Binding Password}" HorizontalAlignment="Center"  Width="100"></TextBox>
            <Button Content="Login"  Width="100" Command="{Binding LoginCmd}"></Button>
            <TextBlock   Width="100"  HorizontalAlignment="Center" Text="{Binding Error}" ></TextBlock>
            <Button Content="or Register new account"  Command="{Binding RegisterCmd}" Width="200"  HorizontalAlignment="Center" ></Button>
        </StackPanel>
    </Grid>
</Window>
